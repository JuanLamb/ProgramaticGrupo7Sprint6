<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/productForm.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <title>Cargar nuevo producto</title>
</head>

<%- include('../partials/head') %>

<body>

    <%- include('../partials/header') %>

    <main class="productForm">

        <h1>Cargar nuevo producto</h1>

        <section class="edicionCreacion">
            <article class="caracteristicas">
                <form method="POST" action="/products" enctype="multipart/form-data">
    
                    <div class="nombre">
                        <label for="nombre">Nombre</label>
                        <input type="text" name="name" id="nombre">
                    </div>
    
                    <div class="marca">
                        <label for="marca">Marca</label>
                        <select name="brandId" id="marca">
                            <option value="1">Edelweiss</option>
                            <option value="2">Black Diamond</option>
                            <option value="3">Coleman</option>
                            <option value="4">Salomon</option>
                        </select>
                    </div>

                    <div class="genero">
                        <label for="genero">Genero</label>
                        <select name="genderId" id="genero">
                            <option value="1">Hombre</option>
                            <option value="2">Mujer</option>
                            <option value="3">Unisex</option>
                        </select>
                    </div>
    
                   <div class="formBoxes">
                        <div class="categoria">
                            <label for="categoria">Categoría</label>
                            <select name="categoryId" id="categoria">
                                <option value="1" >Escalada</option>
                                <option value="2">Camperas</option>
                                <option value="3">Calzado</option>
                                <option value="4">Mochilas</option>
                            </select>
                        </div>
        
                        <div class="checkboxes">
                            <h3 class="colorTitle">Colores</h3>

                            <div class="checkboxBox">
                                <label for="azul">Azul</label>
                                <input type="checkbox" id="azul" name="colorId" value="1">
                            </div>
                            
                            <div class="checkboxBox">
                                <label for="rojo">Rojo</label>
                                <input type="checkbox" id="rojo" name="colorId" value="2">
                            </div>

                            <div class="checkboxBox">
                                <label for="amarillo">Amarillo</label>
                                <input type="checkbox" id="amarillo" name="colorId" value="3">
                            </div>

                            <div class="checkboxBox">
                                <label for="negro">Negro</label>
                                <input type="checkbox" id="negro" name="colorId" value="4">
                            </div>
                        </div>
        
                        <div class="checkboxes">
                            <h3 class="tallesTitle">Talles</h3>

                            <div class="checkboxBox">
                                <label for="XL">XL</label>
                                <input type="checkbox" id="XL" name="sizeId" value="1">
                            </div>
                            
                            <div class="checkboxBox">
                                <label for="L">L</label>
                                <input type="checkbox" id="L" name="sizeId" value="2">
                            </div>

                            <div class="checkboxBox">
                                <label for="M">M</label>
                                <input type="checkbox" id="M" name="sizeId" value="3">
                            </div>

                            <div class="checkboxBox">
                                <label for="S">S</label>
                                <input type="checkbox" id="S" name="sizeId" value="4">
                            </div>
                        </div>
    
                   <div class="priceBoxes">
                        <div class="precio">
                            <label for="precio">Precio</label>
                            <input type="number" name="price" id="precio">
                        </div>
        
                        <div class="descuento">
                            <label for="descuento">Descuento</label>
                            <input type="number" name="discount" id="descuento">
                        </div>
                   </div>

                   <div class="descripcion">
                        <label for="descripcion">Descripción</label>
                        <input type="text" name="description" id="descripcion">
                    </div>

                    <div class="imagen">
                        <label for="imagen">Imagen</label>
                        <input type="file" name="image" id="imagen" accept=".jpg" >
                    </div>

                    <div class="radios">

                        <div class="offerRadios">
                            <h3 class="radioTitle">En oferta?</h3>

                            <div class="radioContainer">
                                <label for="true">SI</label>
                                <input type="radio" name="offer" id="true" value="1">
                            </div>
    
                            <div class="radioContainer">
                                <label for="false">NO</label>
                                <input type="radio" name="offer" id="false" value="2">
                            </div>
                        </div>

                        <div class="temporadaRadios">
                            <h3 class="radioTitle">De temporada?</h3>
                            
                            <div class="radioContainer">
                                <label for="true">SI</label>
                                <input type="radio" name="season" id="true" value="1">
                            </div>
    
                            <div class="radioContainer">
                                <label for="false">NO</label>
                                <input type="radio" name="season" id="false" value="2">
                            </div>
                        </div>

                    </div>

                    <div class="stock">
                        <label for="stockMin">StockMin</label>
                        <input type="number" name="stockMin" id="stockMin">
                    </div>

                    <div class="stock">
                        <label for="stockMax">StockMax</label>
                        <input type="number" name="stockMax" id="stockMax">
                    </div>
                    
                    <div class="botonGuardar">
                        <button type="submit">Cargar</button>
                    </div>

                </form>
            </article>
            
        </section>
    </main>

    <%- include('../partials/footer') %>
    
</body>
</html>