<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/productForm.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <title>Cargar nuevo producto</title>
</head>

<%- include('../partials/head') %>

<body>

    <%- include('../partials/header') %>

    <main class="productForm">

        <h1>Cargar nuevo producto</h1>

        <section class="edicionCreacion">
            <article class="caracteristicas">
                <form method="POST" action="/products" enctype="multipart/form-data">
    
                    <div class="nombre">
                        <label for="nombre">Nombre</label>
                        <input type="text" name="name" id="nombre">
                    </div>
    
                    <div class="marca">
                        <label for="marca">Marca</label>
                        <select name="brandId" id="marca">
                            <% brands.forEach(brand => { %>
                                <option value="<%= brand.id %>"> <%= brand.name %> </option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="genero">
                        <label for="genero">Genero</label>
                        <select name="genderId" id="genero">
                            <% genders.forEach(gender => { %>
                                <option value="<%= gender.id %>"> <%= gender.type %> </option>
                            <% }) %>
                        </select>
                    </div>
    
                   <div class="formBoxes">
                        <div class="categoria">
                            <label for="categoria">Categoría</label>
                            <select name="categoryId" id="categoria">
                                <% categories.forEach(category => { %>
                                    <option value="<%= category.id %>"> <%= category.name %> </option>
                                <% }) %>
                            </select>
                        </div>
        

                            <div class="color">
                                <label class="colorTitle" for="color">Colores</label>
                                <select name="colorId" id="color">
                                    <% colors.forEach(color => { %>
                                        <option value="<%= color.id %>"> <%= color.color %> </option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="size">
                                <label class="tallesTitle" for="size">Talles</label>
                                <select name="sizeId" id="size">
                                    <% sizes.forEach(size => { %>
                                        <option value="<%= size.id %>"> <%= size.type %> </option>
                                    <% }) %>
                                </select>
                            </div>
    
                   <div class="priceBoxes">
                        <div class="precio">
                            <label for="precio">Precio</label>
                            <input type="number" name="price" id="precio">
                        </div>
        
                        <div class="descuento">
                            <label for="descuento">Descuento</label>
                            <input type="number" name="discount" id="descuento">
                        </div>
                   </div>

                   <div class="descripcion">
                        <label for="descripcion">Descripción</label>
                        <textarea name="description" id="descripcion"></textarea>
                    </div>

                    <div class="imagen">
                        <label for="imagen">Imagen</label>
                        <input type="file" name="image" id="imagen" accept=".jpg" >
                    </div>

                    <div class="radios">

                        <div class="offerRadios">
                            <h3 class="radioTitle">En oferta?</h3>

                            <div class="radioContainer">
                                <label for="true">SI</label>
                                <input type="radio" name="offer" id="true" value="1">
                            </div>
    
                            <div class="radioContainer">
                                <label for="false">NO</label>
                                <input type="radio" name="offer" id="false" value="2">
                            </div>
                        </div>

                        <div class="temporadaRadios">
                            <h3 class="radioTitle">De temporada?</h3>
                            
                            <div class="radioContainer">
                                <label for="true">SI</label>
                                <input type="radio" name="season" id="true" value="1">
                            </div>
    
                            <div class="radioContainer">
                                <label for="false">NO</label>
                                <input type="radio" name="season" id="false" value="2">
                            </div>
                        </div>

                    </div>

                    <div class="stock">
                        <label for="stockMin">StockMin</label>
                        <input type="number" name="stockMin" id="stockMin">
                    </div>

                    <div class="stock">
                        <label for="stockMax">StockMax</label>
                        <input type="number" name="stockMax" id="stockMax">
                    </div>
                    
                    <div class="botonGuardar">
                        <button type="submit">Cargar</button>
                    </div>

                </form>
            </article>
            
        </section>
    </main>

    <%- include('../partials/footer') %>
    
</body>
</html>