
<header class="header-home">
    <section class="headerElements">
        <div class="bars">
            <a href="#"><i class="fas fa-bars"></i></a>
        </div>
        <div class="logo">
            <a href="/"><img src="/images/logo/logo.png" alt="logo"></a>    
        </div>
        <div class="central-navbar">
            <ul>
                <li><a href="/products/productCategories/escalada">Escalada</a></li>
                <li><a href="/products/productCategories/camperas">Camperas</a></li>
                <li><a href="/products/productCategories/calzado">Calzado</a></li>
                <li><a href="/products/productCategories/mochilas">Mochilas</a></li>
                <li><a href="/products">Marcas</a></li>
            </ul>
        </div>
        <nav class="main-nav">
            
            <div class="right-navbar">

                <% if(locals.isLogged && locals.userLogged.roleId == 2){ %>

                        <div class="right-navbarItem">
                            <i class="fas fa-search searchIcon"></i>
                        </div>

                        <div class="right-navbarItem">
                            <a href="/profile"><i class="fas fa-user-circle"></i></a>
                        </div>

                        <div class="right-navbarItem">
                            <a href="/productCart"><i class="fas fa-shopping-cart"></i></a>
                        </div>
    
                        <div class="right-navbarItem">
                            <a href="/products/create"><p>Nuevo producto</p></a>
                        </div>

                <% } else if(locals.isLogged && locals.userLogged.roleId == 1){ %>
                    
                    <div class="right-navbarItem">
                        <i class="fas fa-search searchIcon"></i>
                    </div> 

                    <div class="right-navbarItem">
                        <a href="/profile"><i class="fas fa-user-circle"></i></a>
                    </div>

                    <div class="right-navbarItem">
                        <a href="/productCart"><i class="fas fa-shopping-cart"></i></a>
                    </div>

                <% } else { %>

                    <div class="right-navbarItem">
                        <i class="fas fa-search searchIcon"></i>
                    </div> 

                    <div class="right-navbarItem">
                        <a href="/login"><i class="fas fa-user-circle"></i></a>
                    </div>

                    <div class="right-navbarItem">
                        <a href="/productCart"><i class="fas fa-shopping-cart"></i></a>
                    </div>

                <% } %>
            </div>
        </nav>
    </section>
    <script src="/js/headerJS.js"></script>
