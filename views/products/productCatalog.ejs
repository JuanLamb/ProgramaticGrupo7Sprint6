<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>

<body>
    
    <%- include('../partials/header') %>
   
    <main class="catalog-main">
        <h1 class="catalogTitle">PRODUCTOS</h1>
        <section class="subtitle">
            <form action="" class="buttonContainer">
                <button class="filterButton">Filtrar</button>
            </form>
        </section>
        <article class="catalogBody">

             <%- include('../partials/productFilter')  %> 

            <section class="productsSection">

                <% products.forEach(product => { %>
                    <%- include('../partials/catalogProduct', { product }) %>
                <% })%>
                
            </section>
        </article>
    </main>

    <%- include('../partials/footer') %>
    
    <script src="/js/flickity.pkgd.min.js"></script>
</body>
</html>